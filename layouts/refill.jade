extends layout

block title
  title #{title} :: #{summary[bid].info.title} | #{site.name}

block body
  include _article-header.jade

  article#article

    .title
      h2.b-title= summary[bid].info.title
      h1.r-title!= title
  
    .main!= contents

    .adsense.
      <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
      <!-- refills article top -->
      <ins class="adsbygoogle"
        style="display:inline-block;width:728px;height:90px"
        data-ad-client="ca-pub-2136746860059501"
        data-ad-slot="3966371874"></ins>
      <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
      </script>

    footer
      h3
        | Index of&nbsp;
        a(href="/refills/#{bid}/") #{summary[bid].info.title}
      ul
        each r in summary[bid].refills
          li
            a(href="/refills/#{r.bid}/#{r.rid}/")= r.title
